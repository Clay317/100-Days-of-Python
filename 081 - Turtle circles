from turtle import *
import random

for n in range(60):
    penup()
    goto(random.randint(-400, 400), random.randint(-400, 400))
    pendown()

    red_amount   = random.randint(30,  100) / 100.0
    blue_amount  = random.randint(10, 100) / 100.0
    green_amount = random.randint(30,  100) / 100.0
    pencolor((red_amount, green_amount, blue_amount))

    circle_size = random.randint(25, 40)
    pensize(1)

    for i in range(6):
        circle(circle_size)
        left(80)
